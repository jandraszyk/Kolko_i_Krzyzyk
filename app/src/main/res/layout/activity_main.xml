<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.janek.kolkoikrzyzyk.MainActivity">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3"
        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/bt_one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:backgroundTint="?attr/colorButtonNormal"
            android:text=""
            android:textSize="30sp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="30sp"
            android:text="" />
        <Button
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text=""
            android:textSize="30sp" />
        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="30sp"
            android:text="" />
        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="30sp"
            android:text="" />
        <Button
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="30sp"
            android:text="" />
        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="30sp"
            android:text="" />
        <Button
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="30sp"
            android:text="" />
        <Button
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="2"
            android:textSize="30sp"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/tv_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textSize="20sp"
        android:layout_above="@+id/txt_score1"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tv_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_player1"
        android:layout_alignBottom="@+id/tv_player1"
        android:layout_alignEnd="@+id/gridLayout"
        android:text="Player 2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60sp"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignEnd="@+id/tv_player1"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/txt_score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60sp"
        android:layout_alignBaseline="@+id/txt_score1"
        android:layout_alignBottom="@+id/txt_score1"
        android:layout_alignStart="@+id/tv_player2"
        android:layout_marginStart="18dp" />

    <Button
        android:id="@+id/bt_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout"
        android:layout_marginTop="48dp"
        android:text="CONTINUE"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />
</RelativeLayout>
